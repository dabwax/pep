.side-nav
  width 220px !important
  background $blue !important
  box-shadow none !important

  li
    padding: 0 15px;

#main
  padding-left 60px

.side-nav .material-icons
  margin-top 18px
  margin-right 14px

.pep-login .side-nav.fixed a
  font-family "Arvo"
  font-weight 900
  font-size 16px
  text-transform uppercase

.pep-login .side-nav.fixed a:hover
  background transparent !important

.pep-login .side-nav.fixed li:hover,
.selecionado
  background rgba(255, 255, 255, 0.3) !important

.pep-login .side-nav.fixed li:hover
  background rgba(255, 255, 255, 0.4) !important

.pep-login .side-nav.fixed a,
.pep-login .side-nav.fixed i
  color #FFF

#btn-abrir-cms
  font-weight bold
  padding-left 32px
  border 1px solid #FFF

.titulo-cms
  line-height 20px
  height 20px
  font-size 16px
  text-align center
  font-family "Arvo"
  font-weight 300
  color #FFF
  margin-top 0px
  margin-bottom 20px
  float left
  width 100%

.side-nav-cms
  background $blue2 !important

.dropdown-content a
  color #000 !important
  padding 0px 5px !important
  height 34px !important
  line-height 34px !important
  font-size 12px !important

.dropdown-content .material-icons
  color #000 !important
  margin-top 0px !important
  font-size 18px !important

.dropdown-content li
  height 34px !important
  line-height 34px !important
  min-height auto !important

@media only screen and (max-width: 992px)
  #slide-out
    padding-bottom 40px !important
