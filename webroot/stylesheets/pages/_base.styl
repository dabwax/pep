html {
  position: relative;
  min-height: 100%;
}
body {
  /* Margin bottom by footer height */
  margin-bottom: 70px !important;
}

#rodape {
  position: absolute; bottom: 0px; right: 0px; width: 100%; text-align: right;
}
#rodape hr {
  border: none;
  border-bottom: 1px dashed #CCC;
}
#rodape em {
  padding-right: 20px; margin-top: 20px; display: block; padding-bottom: 20px;color: #999;
}

#search
  border none

  &::-webkit-input-placeholder
    color #222

#pep-menu-btn
  display inline-block
  margin-left 12px

.card-title
  color $blue
  font-weight bold !important

.small-logo
  margin-top 20px
  display inline-block

.toast
  background #e91e63
  font-weight bold

.input input
  padding-left 4px

.brand-logo img
  padding-top 6px

.input-field .k-widget
  width 100%

.tabs .tab a
  font-size 13px

.aba-planilha
  padding-top 20px !important

strong
  font-weight 900 !important

.loader
  position fixed
  left 0px
  top 0px
  width 100%
  height 100%
  background rgba(0, 0, 0, 0.6)
  z-index 9999
  text-align center

.loader img
  position absolute
  top 50%
  left 50%
  margin-left -40px
  margin-top -40px

.modal
  background $blue !important

  h4
    color #FFF !important

html
  font-family 'Arvo' !important

#slide-out
  li
    position relative

  .menu-mobile
    position absolute
    right 0px
    top 0px

// Menu responsivo
@media only screen and (max-width: 992px)
  .side-nav.fixed
    width 100% !important
    transform none !important
    position relative !important
    padding-bottom 0px !important

  #main
    padding-left 0px !important
